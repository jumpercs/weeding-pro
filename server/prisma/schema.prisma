generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum EventType {
  wedding
  corporate
  birthday
  other

  @@map("event_type")
}

enum PlanType {
  free
  pro
  business

  @@map("plan_type")
}

enum SubscriptionStatus {
  active
  cancelled
  expired
  trialing

  @@map("subscription_status")
}

model Profile {
  id        String   @id @db.Uuid
  email     String
  name      String?
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  subscription Subscription?
  events       Event[]

  @@map("profiles")
}

model Subscription {
  id                   String             @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  userId               String             @unique @map("user_id") @db.Uuid
  plan                 PlanType           @default(free)
  status               SubscriptionStatus @default(active)
  stripeCustomerId     String?            @map("stripe_customer_id")
  stripeSubscriptionId String?            @map("stripe_subscription_id")
  currentPeriodStart   DateTime?          @map("current_period_start") @db.Timestamptz
  currentPeriodEnd     DateTime?          @map("current_period_end") @db.Timestamptz
  createdAt            DateTime           @default(now()) @map("created_at") @db.Timestamptz
  updatedAt            DateTime           @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  user Profile @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model Event {
  id          String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  userId      String    @map("user_id") @db.Uuid
  name        String
  type        EventType @default(wedding)
  eventDate   DateTime? @map("event_date") @db.Date
  budgetTotal Decimal   @default(0) @map("budget_total") @db.Decimal(12, 2)
  description String?
  createdAt   DateTime  @default(now()) @map("created_at") @db.Timestamptz
  updatedAt   DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  user        Profile      @relation(fields: [userId], references: [id], onDelete: Cascade)
  guests      Guest[]
  guestGroups GuestGroup[]
  expenses    Expense[]

  @@index([userId])
  @@map("events")
}

model GuestGroup {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  eventId   String   @map("event_id") @db.Uuid
  name      String
  color     String   @default("#64748b")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz

  event  Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  guests Guest[]

  @@index([eventId])
  @@map("guest_groups")
}

model Guest {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  eventId   String   @map("event_id") @db.Uuid
  name      String
  groupId   String?  @map("group_id") @db.Uuid
  confirmed Boolean  @default(false)
  parentId  String?  @map("parent_id") @db.Uuid
  priority  Int      @default(3)
  photoUrl  String?  @map("photo_url")
  isRoot    Boolean  @default(false) @map("is_root")
  notes     String?
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  event  Event       @relation(fields: [eventId], references: [id], onDelete: Cascade)
  group  GuestGroup? @relation(fields: [groupId], references: [id], onDelete: SetNull)
  parent Guest?      @relation("GuestParent", fields: [parentId], references: [id], onDelete: SetNull)
  children Guest[]   @relation("GuestParent")

  @@index([eventId])
  @@index([parentId])
  @@index([groupId])
  @@map("guests")
}

model Expense {
  id             String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  eventId        String   @map("event_id") @db.Uuid
  category       String
  supplier       String?
  estimatedValue Decimal  @default(0) @map("estimated_value") @db.Decimal(12, 2)
  actualValue    Decimal  @default(0) @map("actual_value") @db.Decimal(12, 2)
  isContracted   Boolean  @default(false) @map("is_contracted")
  include        Boolean  @default(true)
  notes          String?
  createdAt      DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt      DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
  @@map("expenses")
}
